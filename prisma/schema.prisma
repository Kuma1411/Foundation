generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



enum Status{
  ACTIVE
  INACTIVE
}




model User{
  userId          String  @id @default(uuid())
  firstName       String?
  middleName      String?
  lastName        String?
  username        String
  email           String
  status          Status
  password        String
  roleId          String?
  gender          String?
  phoneNumber     String?
  mobileNumber    String?
  dateOfBirth     String?
  location        String?
  interest        String?
  bio             String?
  createdAt       DateTime @default(now())

  role           Role? @relation(fields: [roleId], references: [roleId])
}


model Role{
  roleId          String @id @default(uuid())
  role            String
  status          Status
  description     String?
  users           User[]
}



//////////////////////////////////// Item schema ////////////////////////////////////////

model Item{
  itemId          String @id @default(uuid())
  ID              String
  name            String
  itemGroup       String
  status          Status
}





