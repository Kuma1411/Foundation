generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  HR
  MANAGER
  ENGINEER
  SALES
}

enum Status{
  ACTIVE
  INACTIVE
}


model User{
  userId          String  @id @default(uuid())
  name            String
  email           String
  status          Status
  password        String
  role            Role

}





